# Secret key for LTI integration

LTI_KEY=your-lti-key-here

# MongoDB connection string

MONGODB_URI=mongodb://username:password@host:port/database

# The public URL where your app is hosted

APP_URL=https://your-app-url.com

# Port for local development

PORT=8080

# Brightspace platform URL (Issuer)

PLATFORM_URL=https://your-brightspace-instance.com

# OAuth2 client ID from Brightspace

CLIENT_ID=your-client-id-here

# Brightspace authentication URL (OpenID Connect Authentication Endpoint)

AUTH_URL=https://your-brightspace-instance.com/d2l/lti/authenticate

# Brightspace token endpoint (OAuth2 Access Token URL)

TOKEN_URL=https://auth.your-brightspace-instance.com/core/connect/token

# Brightspace JWKS endpoint (Keyset URL)

KEYSET_URL=https://your-brightspace-instance.com/d2l/.well-known/jwks
